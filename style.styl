@import url('https://fonts.googleapis.com/css?family=Roboto')

*
  box-sizing: border-box

/* Palette generated by Material Palette - materialpalette.com/pink/light-blue */

primary-color =        #4CAF50
primary-color-dark =   #43a047
primary-color-light =  #e8f5e9
primary-color-text =   #FFFFFF
accent-color =         #03A9F4
primary-text-color =   #212121

body
  font-family: "Roboto", "Helvetica Neue", Helvetica, sans-serif
  font-size: 16px
  color: primary-text-color
  margin: 0

  > content
    display: block
    padding: 0 2em 2em

    > header
      background-color: primary-color
      color: primary-color-text
      margin: 0 -2em
      padding: 1em 2em

      > h1
        margin: auto
        max-width: 640px
        padding-top: 1em

    > section
      padding-top: 1em

section
  margin: auto
  max-width: 640px

a
  color: accent-color
  text-decoration: none

h1, h2
  font-weight: 300
  margin: 1rem 0

form
  max-width: 400px

label
  display: block
  
  > .asterisk
    color: primary-color

pre
  background-color: primary-color-light
  border-radius: 4px
  padding: 1em
  white-space: pre-wrap

input[type="text"], input[type="email"]
  display: block
  font-size: inherit
  margin-bottom: 1em
  width: 100%

button
  background-color: primary-color-dark
  border: none
  border-radius: 4px
  box-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5)
  color: primary-color-text
  font-size: inherit
  font-weight: bold
  overflow: hidden
  padding: 1em
  position: relative
  transition-property: background-color, color
  transition-duration: 0.25s
  width: 100%

  &:hover
    color: primary-color-text
    background-color: primary-color
    cursor: pointer

    &:after
      animation: shimmer-left 2.5s linear 0.25s 2
      content: ""
      background: linear-gradient(
        50deg,
        rgba(255, 255, 255, 0) 0%,
        rgba(255, 255, 255, 0) 40%,
        rgba(255, 255, 255, 0.95) 50%,
        rgba(255, 255, 255, 0) 75%,
        rgba(255, 255, 255, 0) 100%
      )
      height: 100%
      position: absolute
      top: 0
      left: 100%
      width: 100%

@keyframes shimmer-left
  0%
    left: 100%
  25%
    left: 0
  50%
    left: -100%
  100%
    left: -100%
